@model ProjectOne_Missions.Models.Users
@{
    ViewBag.Title = "SignUp";
}

<div class="container">
    <div class="row">
        @Html.ActionLink("Back", "Index", "Home", null, new { @class = "new-account" })
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Create An Account</h1>
            <div class="account-wall">
               

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    
                }

                <label class="checkbox pull-left">
                    <input type="checkbox" value="remember-me">
                    Remember me
                </label>
                <a href="https://searchsecurity.techtarget.com/definition/password" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
               
            </div>
            @Html.ActionLink("Already Have an Account?", "LoginPage", "Home", null, new { @class = "text-center new-account" })
        </div>
    </div>
</div>