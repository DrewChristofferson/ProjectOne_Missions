@model IEnumerable<ProjectOne_Missions.Models.MissionQuestions>

@{
    ViewBag.Title = "Index";
}

<h2>
    Frequently Asked Questions
</h2>

<p>
    @Html.ActionLink("Ask a New Question", "Create")
</p>
<table class="table">
    <tr>


        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Answer)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Answer)
        </td>
        <td>
            @Html.ActionLink("Answer", "Edit", new { id = item.MissionQ_ID }) 
        </td>
    </tr>
}

</table>
